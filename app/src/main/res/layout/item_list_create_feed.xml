<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    app:cardCornerRadius="8dp"
    android:layout_marginVertical="4dp"
    >
    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="4dp"
        android:paddingVertical="8dp"
        >
        <ImageView
            android:id="@+id/image_avatar"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:src="@drawable/avatar"
            android:background="@drawable/circle"/>
        <TextView
            android:id="@+id/text_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="4dp"
            android:layout_toRightOf="@id/image_avatar"
            android:textSize="12dp"
            android:textStyle="bold"
            android:textColor="@color/colorNames"
            android:text="User Name"
            />
        <TextView
            android:id="@+id/text_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/text_user_name"
            android:textSize="12dp"
            android:text="HEllo"/>

        <TextView
            android:id="@+id/text_hunt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_user_name"
            android:layout_toRightOf="@id/image_avatar"
            android:paddingHorizontal="4dp"
            android:layout_marginTop="5dp"
            android:textSize="16dp"
            android:textStyle="bold"
            android:text="Hunt name"
            />
        <TextView
            android:id="@+id/text_num_of_clues"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_user_name"
            android:layout_alignParentRight="true"
            android:paddingHorizontal="4dp"
            android:layout_marginTop="5dp"
            android:textSize="16dp"
            android:textStyle="bold"
            android:text="8 clues"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:paddingHorizontal="10dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="6dp"
            android:layout_below="@id/text_num_of_clues"
            android:background="@drawable/round_button_profile"
            android:text="@string/join_hunt"
            android:textColor="#FFFFFF"
            />
    </RelativeLayout>
</android.support.v7.widget.CardView>
</LinearLayout>

